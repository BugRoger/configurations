
rule "Master OFF"
when
    Item KNX_Licht_Master received command OFF
then
	sendCommand(Licht_Oben_Arbeiten_Basteltisch, OFF)
    sendCommand(Licht_Oben_Schlafen, OFF)
    sendCommand(Licht_Unten_Wohnen, OFF)
end       

