
rule "Master OFF"
when
    Item KNX_Licht_Master received command OFF
then
	sendCommand(sZwaveBedroom, OFF)
    sendCommand(sZwaveLivingroom, OFF)
    sendCommand(sZwaveOffice, OFF)
end       

rule "Licht Oben An"
when
    Item sKnxBacklight received command ON
then
	sendCommand(sZwaveBedroom, ON)
    sendCommand(sZwaveOffice, ON)
end       

rule "Licht Oben Aus"
when
    Item sKnxBacklight received command OFF
then
    sendCommand(sZwaveBedroom, OFF)
	sendCommand(sZwaveOffice, OFF)
end       

rule "Licht Unten An"
when
    Item KNX_Licht_Unten received command ON
then
	sendCommand(sZwaveLivingroom, ON)
end       

rule "Licht Unten Aus"
when
    Item KNX_Licht_Unten received command OFF
then
	sendCommand(sZwaveLivingroom, OFF)
end       